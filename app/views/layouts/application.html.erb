<!DOCTYPE html>
<html>
<head>
  <title>Resolutions</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div class="container_12">
  
  <div class="grid_6">
  <a href="/"><%= image_tag("logo.png", :alt => "Logo", :class => "logo") %></a>
  
  </div>
  
  <div class="grid_4">
    <div class="headright">
    <% if user_signed_in? %>
						Hello, <%= current_user.email %><br />
						<%= link_to('Profile', edit_registration_path(current_user)) %> / <%= link_to('Logout', destroy_user_session_path) %>
					<% else %>
					   <ul class="login">
               <li><%= link_to('Login', new_user_session_path) %> </li>
               <li><%= link_to('Register', new_user_registration_path) %></li>
             </ul>
					<% end %>

    </div>
  
  </div>
  
  <% if flash[:notice] %>
    <div class="grid_6">
      <p id="notice" ><%= notice %></p>
    </div>
  <% end %>
  
  <div class="grid_10 content">
  
  <%= yield %>

  </div>
  
</div>

</body>
</html>
